<% if current_user.tofavorite?(user) %>
    <%= form_for(current_user.favorites.find_by(micropost_id: user.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :micropost_id, user.id %>
      <%= f.submit 'Unfavorite', class: 'btn btn-danger btn-xs' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :micropost_id, user.id %>
      <%= f.submit 'Favorite', class: 'btn btn-primary btn-xs' %>
    <% end %>
  <% end %>